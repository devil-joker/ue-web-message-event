{
  "compilerOptions": {
    "target": "es5",
    "useDefineForClassFields": true,
    "module": "es2015",
    "lib": ["ES2015", "DOM"],
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },
  "include": ["src/", "types/"]
}
